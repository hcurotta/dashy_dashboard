<% content_for :title do %>GoodCall Dashboard<% end %>
<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="new-users" data-view="List" data-unordered="true" data-title="Newest Salespeople">
        <i class="icon-user icon-background"></i></div>
    </li>
    <li data-row="2" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="calls" data-view="Number" data-title="Calls This Week" style="background-color:#96bf48;"></div>
      <i class="icon-phone icon-background"></i>
    </li>
    <li data-row="1" data-col="3" data-sizex="1" data-sizey="1">
      <div data-id="users-activated" data-view="Number" data-title="Users Activated"></div>
      <i class="icon-user icon-background"></i>
    </li> 
    <li data-row="2" data-col="2" data-sizex="1" data-sizey="1">
      <div data-id="pivotal" data-view="Meter" data-title="Pivotal Velocity" data-moreinfo="" data-min="0" data-max="20"></div>
    </li>

  </ul>
</div>